        <TextBox x:Name="Find" HorizontalAlignment="Left" Height="42" Margin="828,89,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="444" Background="#FFC7C7C7" BorderBrush="#FF535353" FontSize="22" KeyUp="CarsClick"/>
